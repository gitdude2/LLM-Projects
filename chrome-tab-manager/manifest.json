{
    "manifest_version": 3,
    "name": "Tab Manager",
    "version": "1.0",
    "description": "תוסף לניהול טאבים כולל סגירה והעברת טאבים למצב שינה",
    "permissions": ["tabs", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Tab Manager"
    }
}